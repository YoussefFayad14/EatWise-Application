<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/dark_green_color" />
                    <corners android:radius="48dp" />
                    <size android:width="50dp" android:height="100dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white2" />
                    <corners android:radius="48dp" />
                    <size android:width="50dp" android:height="100dp"/>
                </shape>
            </item>
        </selector>
    </item>

    <item android:gravity="bottom|center_horizontal">
        <selector>
            <item android:state_selected="true">
                <shape android:shape="oval">
                    <solid android:color="@color/dark_green_color" />
                    <size android:width="50dp" android:height="50dp" />
                    <stroke android:width="1dp" android:color="#338F86" />
                </shape>
            </item>
            <item android:state_selected="false">
                <shape android:shape="oval">
                    <solid android:color="@color/white2" />
                    <size android:width="50dp" android:height="50dp" />
                    <stroke android:width="1dp" android:color="@color/white" />
                </shape>
            </item>
        </selector>

    </item>

</layer-list>