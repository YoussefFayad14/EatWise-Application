<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealPlanFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/meal_plan"
                android:textSize="32dp"
                android:textColor="@color/main_color"
                android:textStyle="bold"
                android:layout_margin="8dp" />

            <GridLayout
                android:id="@+id/mealPlanGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="0dp"
                android:columnCount="7"
                android:rowCount="1"
                android:orientation="horizontal"
                android:scrollbarAlwaysDrawHorizontalTrack="true">

                <FrameLayout
                    android:id="@+id/frame_MealDay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/day_shape">

                    <TextView
                        android:id="@+id/dayName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="SAT"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray"
                        android:layout_gravity="top|center_horizontal" />

                    <TextView
                        android:id="@+id/dayNum1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:paddingBottom="12dp"
                        android:textColor="@color/gray"
                        android:layout_gravity="bottom|center_horizontal" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frame_MealDay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_shape">

                    <TextView
                        android:id="@+id/dayName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="SUN"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray"
                        android:layout_gravity="top|center_horizontal" />

                    <TextView
                        android:id="@+id/dayNum2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:paddingBottom="12dp"
                        android:textColor="@color/gray"
                        android:layout_gravity="bottom|center_horizontal" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frame_MealDay3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_shape">

                    <TextView
                        android:id="@+id/dayName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="Mon"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray"
                        android:layout_gravity="top|center_horizontal" />

                    <TextView
                        android:id="@+id/dayNum3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:paddingBottom="12dp"
                        android:textColor="@color/gray"
                        android:layout_gravity="bottom|center_horizontal" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frame_MealDay4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_shape">

                    <TextView
                        android:id="@+id/dayName4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="TUE"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray"
                        android:layout_gravity="top|center_horizontal" />

                    <TextView
                        android:id="@+id/dayNum4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:paddingBottom="12dp"
                        android:textColor="@color/gray"
                        android:layout_gravity="bottom|center_horizontal" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frame_MealDay5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_shape">

                    <TextView
                        android:id="@+id/dayName5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="WED"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray"
                        android:layout_gravity="top|center_horizontal" />

                    <TextView
                        android:id="@+id/dayNum5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:paddingBottom="12dp"
                        android:textColor="@color/gray"
                        android:layout_gravity="bottom|center_horizontal" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frame_MealDay6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/day_shape">

                    <TextView
                        android:id="@+id/dayName6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="THU"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray"
                        android:layout_gravity="top|center_horizontal" />

                    <TextView
                        android:id="@+id/dayNum6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:paddingBottom="12dp"
                        android:textColor="@color/gray"
                        android:layout_gravity="bottom|center_horizontal" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frame_MealDay7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/day_shape">

                    <TextView
                        android:id="@+id/dayName7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="FRI"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray"
                        android:layout_gravity="top|center_horizontal" />

                    <TextView
                        android:id="@+id/dayNum7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:paddingBottom="12dp"
                        android:textColor="@color/gray"
                        android:layout_gravity="bottom|center_horizontal" />

                </FrameLayout>

            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp">

                <TextView
                    android:id="@+id/day_num_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sunday_2_february"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

                <ImageButton
                    android:id="@+id/btn_addNewMeal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_oval_shape"
                    android:src="@drawable/baseline_add_24"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/breakfast"
                    android:textSize="24dp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:layout_gravity="start"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_Breakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:listitem="@layout/item_card_favourites"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lunch"
                    android:textSize="24dp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:layout_gravity="start"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_Lunch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:listitem="@layout/item_card_favourites"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dinner"
                    android:textSize="24dp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:layout_gravity="start"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_Dinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:listitem="@layout/item_card_favourites"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>